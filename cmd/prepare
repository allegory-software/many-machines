#!/bin/bash
# UPDATE || prepare a machine for deployments
. mmlib

_f() {

	# apt is needed first: make it quiet and update sources.
	# rsync also is needed first: to receive files via rsync in preinstall hooks.
	say; package_install apt rsync $PACKAGES

	say; ssh_script_machine "machine_prepare"
	say; say "Machine prepare done."

}
each_machine _f
