#!/bin/bash
# list deployments as found locally and on the git remote
. mmlib

FMT="%-10s %-10s %-10s %-10s %-10s\n"
_f() {
	#LOCAL="local " deploy_vars; eval "${R1[*]}"
	deploy_var APP; local APP=$R1
	printf "$FMT" "$MACHINE" "$DEPLOY" "$APP" "$ENV" "$APP_VERSION"
}
printf "$FMT" MACHINE DEPLOY APP ENV APP_WANT
QUIET=1 INACTIVE=1 each_deploy _f
